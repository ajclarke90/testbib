author = {Pilkington, K and Gibson, B K and Brook, C B and Calura, F and Stinson, G S and Thacker, R J and Michel-Dansac, L and Bailin, J and Couchman, H M P and Wadsley, J and Quinn, T R and Maccio, A},
journal = {Mon. Not. R. Astron. Soc.},
number = {2},
pages = {969--978},
title = {{The distribution of metals in cosmological hydrodynamical simulations of dwarf disc galaxies}},
url = {http://adsabs.harvard.edu/cgi-bin/nph-data\_query?bibcode=2012MNRAS.425..969P\&link\_type=ABSTRACT papers3://publication/doi/10.1111/j.1365-2966.2012.21353.x},
