month = aug,
number = {2},
pages = {22},
primaryClass = {astro-ph},
publisher = {Springer},
title = {{The Structure of Cold Dark Matter Halos}},
url = {http://arxiv.org/abs/astro-ph/9508025 http://adsabs.harvard.edu/doi/10.1086/177173},
volume = {462},
year = {1995}
