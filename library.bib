title = {{Radial mixing and the transition between the thick and thin Galactic discs}},
url = {http://adsabs.harvard.edu/abs/2008MNRAS.388.1175H http://mnras.oxfordjournals.org/cgi/doi/10.1111/j.1365-2966.2008.13395.x},
